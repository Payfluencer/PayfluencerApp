{
  "name": "server",
  "main": "app.ts",
  "scripts": {
    "dev": "tsx watch app.ts",
    "build": "tsc",
    "deploy": "pm2 start  build/app.js --name template-backend --instances 2",
    "start": "node ./build/app.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate",
    "postbuild": "mkdir -p build/prisma/generated && cp -r prisma/generated/* build/prisma/generated"
  },
  "dependencies": {
    "@prisma/client": "6.4.1",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.2",
    "borgen": "^2.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.5.0",
    "google-auth-library": "^9.15.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ws": "^8.18.0",
    "zod": "^3.24.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "esbuild",
      "prisma"
    ]
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.13",
    "prisma": "^6.4.1",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0"
  }
}
